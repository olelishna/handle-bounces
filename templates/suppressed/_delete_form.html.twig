<form method="post" action="{{ path('app_suppressed_delete', {'email': client.email}) }}" style="display: inline-block"
      onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.email) }}">
    <button class="btn btn-danger card_action_delete" title="Delete"><i class="bi bi-trash-fill"></i></button>
</form>